@page
@model SignalRAssignment.Pages_Category.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div>
    <h1 style="text-align: center">Edit category @Model.Category.CategoryName</h1>

    <div class="row">
        <div class="col-md-4" style="margin-left: 35%">
            <form method="post" style="margin-left">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Category.CategoryName" class="control-label"></label>
                    <input asp-for="Category.CategoryName" class="form-control" />
                    <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category.Description" class="control-label"></label>
                    <input asp-for="Category.Description" class="form-control" />
                    <span asp-validation-for="Category.Description" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Category.CategoryId" />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" /> |
                    <a asp-page="./Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
